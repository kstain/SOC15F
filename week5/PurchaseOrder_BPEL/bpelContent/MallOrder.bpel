<!-- MallOrder BPEL Process [Generated by the Eclipse BPEL Designer] -->
<bpel:process name="orderService"
         targetNamespace="http://mallorder.localhost"
         suppressJoinFailure="yes"
         xmlns:tns="http://mallorder.localhost"
         xmlns:bpel="http://docs.oasis-open.org/wsbpel/2.0/process/executable"
         xmlns:lns="http://servicescomputing.org/xsd/po">

    <!-- Import the client WSDL -->
    <bpel:import namespace="http://servicescomputing.org/xsd/po" location="MallOrderArtifacts.wsdl" importType="http://schemas.xmlsoap.org/wsdl/"></bpel:import>
    <bpel:import location="MallOrderArtifacts.wsdl" namespace="http://mallorder.localhost" 
	        importType="http://schemas.xmlsoap.org/wsdl/" />
         
    <!-- ================================================================= -->         
    <!-- PARTNERLINKS                                                      -->
    <!-- List of services participating in this BPEL process               -->
    <!-- ================================================================= -->         
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <bpel:partnerLinks>
        <bpel:partnerLink name="purchasing" partnerLinkType="lns:supplyLT" myRole="purchaseOrderService"></bpel:partnerLink>
        <bpel:partnerLink name="payment" partnerLinkType="lns:paymentLT" partnerRole="paymentRequestor"></bpel:partnerLink>
        <bpel:partnerLink name="shipping" partnerLinkType="lns:shippingLT" partnerRole="shippingServiceRequestor"></bpel:partnerLink>
    </bpel:partnerLinks>
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="PurchaseOrder"
                  messageType="lns:PurchaseOrderMessage"/>
                  
        <!-- 
          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="Result"
                  messageType="lns:ResultMessage"/>
        <bpel:variable name="ShippingRequest" messageType="lns:shippingRequestMessage"></bpel:variable>
        <bpel:variable name="ShippingResponse" messageType="lns:shippingResponseMessage"></bpel:variable>
        <bpel:variable name="PaymentRequest" messageType="lns:paymentRequestMessage"></bpel:variable>
        <bpel:variable name="PaymentResponse" messageType="lns:paymentResponseMessage"></bpel:variable>
    </bpel:variables>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         
    <bpel:sequence name="main">
        
        <!-- Receive input from requester. 
             Note: This maps to operation defined in MallOrder.wsdl 
             -->
        <bpel:receive name="receiveInput" createInstance="yes" partnerLink="purchasing" operation="submitPurchaseOrder" portType="lns:purchaseOrderPT" variable="PurchaseOrder"/>
        
        <bpel:invoke partnerLink="payment" operation="submitPayment" portType="lns:paymentPT" inputVariable="PaymentRequest" outputVariable="PaymentResponse">
		</bpel:invoke>
		
		<bpel:invoke partnerLink="shipping" operation="requestShipping" portType="lns:shippingPT" inputVariable="ShippingRequest" outputVariable="ShippingResponse">
		</bpel:invoke>
        <!-- Generate reply to synchronous request -->
        
        <bpel:reply name="replyOutput" 
               partnerLink="purchasing" operation="submitPurchaseOrder" portType="lns:purchaseOrderPT" variable="Result"/>
    </bpel:sequence>
</bpel:process>

